{
  "filters": {
    "comments": true
  },
  "rules": {
    "preset-ja-technical-writing": {
      "ja-no-mixed-period": {
        "allowPeriodMarks": [
          ":"
        ]
      },
      "no-exclamation-question-mark": false,
      "sentence-length": {
        "max": 100,
        "skipPatterns": [
          "/\\^\\[.+\\]/"
        ],
        "skipUrlStringLink": true
      }
    },
    "preset-ja-spacing": {
      "ja-space-between-half-and-full-width": {
        "space": [
          "alphabets"
        ]
      },
      "ja-space-around-code": {
        "before": true,
        "after": true
      }
    }
  }
}
